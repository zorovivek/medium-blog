generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @unique @default(uuid())
  email String  @unique 
  name String?
  password String
  posts Post[]
}

model Post{
  id  String  @id @unique @default(uuid())
  title String
  description String
  published Boolean @default(false)
  author  User  @relation(fields: [authorid], references: [id])
  authorid  String
}